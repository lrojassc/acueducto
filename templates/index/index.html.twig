{% extends 'base.html.twig' %}

{% block title %}Index{% endblock %}

{% block body %}
    <div class="container">
        <br>
        <div id="carouselExampleFade" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner" style="display: flex; justify-content: space-around">
                <div class="carousel-item active">
                    <img src="{{ asset('imagen/imagen1.png') }}" class="d-block w-90" alt="imagen1">
                </div>
                <div class="carousel-item">
                    <img src="{{ asset('imagen/imagen2.png') }}" class="d-block w-90" alt="imagen2">
                </div>
                <div class="carousel-item">
                    <img src="{{ asset('imagen/imagen3.png') }}" class="d-block w-90" alt="imagen3">
                </div>
                <div class="carousel-item">
                    <img src="{{ asset('imagen/imagen4.png') }}" class="d-block w-90" alt="imagen4">
                </div>
                <div class="carousel-item">
                    <img src="{{ asset('imagen/imagen5.png') }}" class="d-block w-90" alt="imagen5">
                </div>
                <div class="carousel-item">
                    <img src="{{ asset('imagen/imagen6.png') }}" class="d-block w-90" alt="imagen6">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
{% endblock %}
