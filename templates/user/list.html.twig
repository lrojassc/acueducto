{% extends 'base.html.twig' %}

{% block title %}Lista de Usuarios{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col">
                <table id="datatable-users" class="table table-striped table-bordered" data-page-length='50'>
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Nombre</th>
                            <th>Número de Documento</th>
                            <th>Telefono</th>
                            <th>Dirección</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.name }}</td>
                            <td>{{ user.documentNumber }}</td>
                            <td>{{ user.phoneNumber }}</td>
                            <td>{{ user.address }}</td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                    <a type="button" class="btn btn-success" href="{{ path('show_user', {user: user.id}) }}">Ver</a>
                                    <a type="button" class="btn btn-warning" href="{{ path('edit_user', {user: user.id}) }}">Editar</a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}