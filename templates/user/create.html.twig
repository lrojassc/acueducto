{% extends 'base.html.twig' %}

{% block title %}Crear Usuario{% endblock %}

{% block body %}
<div class="container">
    <div class="justify-content-center">
        <br>
        {% for flashMessage in app.flashes('success') %}
            <div class="alert alert-primary" style="background-color: #add9f9!important;" role="alert">
                {{ flashMessage }}
            </div>
        {% endfor %}

        <div class="card">
            <h5 class="card-header">Creaci√≥n de Usuario</h5>
            <div class="card-body">
                {{ form_start(form_create_user) }}
                <input type="hidden" name="token_create_user" value="{{ csrf_token('create-user') }}">
                <div class="row">
                    <div class="form-floating mb-3 mt-3 col-4">
                        <input type="text" class="form-control" name="{{ field_name(form_create_user.name) }}" value="{{ field_value(form_create_user.name) }}" required>
                        <label>{{ field_label(form_create_user.name) }}</label>
                    </div>
                    <div class="form-floating mb-3 mt-3 col-4">
                        <select class="form-select" name="{{ field_name(form_create_user.document_type) }}">
                            {% for label, value in field_choices(form_create_user.document_type) %}
                                <option value="{{ value }}">{{ label }}</option>
                            {% endfor %}
                        </select>
                        <label>{{ field_label(form_create_user.document_type) }}</label>
                    </div>
                    <div class="form-floating mb-3 mt-3 col-4">
                        <input type="number" class="form-control" name="{{ field_name(form_create_user.document_number) }}" value="{{ field_value(form_create_user.document_number) }}" required>
                        <label>{{ field_label(form_create_user.document_number) }}</label>
                    </div>
                </div>
                <div class="row">
                    <div class="form-floating mb-3 mt-3 col-4">
                        <input type="text" class="form-control" name="{{ field_name(form_create_user.email) }}" value="{{ field_value(form_create_user.email) }}">
                        <label>{{ field_label(form_create_user.email) }}</label>
                    </div>
                    <div class="form-floating mb-3 mt-3 col-4">
                        <input type="number" class="form-control" name="{{ field_name(form_create_user.phone_number) }}" value="{{ field_value(form_create_user.phone_number) }}" required>
                        <label>{{ field_label(form_create_user.phone_number) }}</label>
                    </div>
                    <div class="form-floating mb-3 mt-3 col-4">
                        <input type="text" class="form-control" name="{{ field_name(form_create_user.address) }}" value="{{ field_value(form_create_user.address) }}" required>
                        <label>{{ field_label(form_create_user.address) }}</label>
                    </div>
                </div>
                <div class="row">
                    <div class="form-floating mb-3 mt-3 col-4">
                        <input type="text" class="form-control" name="{{ field_name(form_create_user.city) }}" value="{{ field_value(form_create_user.city) }}" required>
                        <label>{{ field_label(form_create_user.city) }}</label>
                    </div>
                    <div class="form-floating mb-3 mt-3 col-4">
                        <input type="text" class="form-control" name="{{ field_name(form_create_user.municipality) }}" value="{{ field_value(form_create_user.municipality) }}" required>
                        <label>{{ field_label(form_create_user.municipality) }}</label>
                    </div>
                    <div class="form-floating mb-3 mt-3 col-4">
                        <select class="form-select" name="{{ field_name(form_create_user.status) }}">
                            {% for label, value in field_choices(form_create_user.status) %}
                                <option value="{{ value }}">{{ label }}</option>
                            {% endfor %}
                        </select>
                        <label>{{ field_label(form_create_user.status) }}</label>
                    </div>
                </div>
                <div class="row">
                    <div class="form-floating mb-3 mt-3 col-4">
                        <select class="form-select" name="{{ field_name(form_create_user.full_payment) }}">
                            {% for label, value in field_choices(form_create_user.full_payment) %}
                                <option value="{{ value }}">{{ label }}</option>
                            {% endfor %}
                        </select>
                        <label>{{ field_label(form_create_user.full_payment) }}</label>
                    </div>
                </div>

                {{ form_row(form_create_user.save) }}
                {{ form_end(form_create_user) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
