{% extends 'base.html.twig' %}

{% block title %}Lista de Facturas{% endblock %}

{% block body %}
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col">
                <table id="datatable_invoices" class="table table-striped table-bordered" data-page-length='50' style="width: 100%">
                    <thead>
                        <tr>
                            <th>No. Factura</th>
                            <th>Valor</th>
                            <th>Año</th>
                            <th>Mes</th>
                            <th>Descripción</th>
                            <th>Estado</th>
                            <th>Concepto</th>
                            <th>Usuario</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for invoice in invoices %}
                        <tr>
                            <td>{{ invoice.id }}</td>
                            <td>${{ invoice.value|number_format(0, '.', '.') }}</td>
                            <td>{{ invoice.yearInvoiced }}</td>
                            <td>{{ invoice.monthInvoiced }}</td>
                            <td>{{ invoice.description }}</td>
                            <td>{{ invoice.concept }}</td>
                            <td>{{ invoice.status }}</td>
                            <td><a href="#">{{ invoice.user.name }}</a></td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                    <button type="button" class="btn btn-success">Ver</button>
                                    <button type="button" class="btn btn-warning">Editar</button>
                                    <button type="button" class="btn btn-danger">Eliminar</button>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}